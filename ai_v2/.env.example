# ========================================
# AI SERVICE CONFIGURATION
# ========================================

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_ENV=local
APP_BASE_URL=http://localhost:8000
ADMIN_API_KEY=your_admin_api_key_here

# ========================================
# MYSQL DATABASE
# ========================================
# Database connection for product and user data
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=your_mysql_password
DB_MYSQL_DATABASE=ecommerce_db

# ========================================
# LLM / GENERATIVE AI MODEL
# ========================================
# Provider options: openai | gemini | ollama
LLM_PROVIDER=gemini

# ========================================
# OPENAI CONFIGURATION
# ========================================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# ========================================
# GOOGLE GEMINI CONFIGURATION
# ========================================
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ========================================
# LLM PARAMETERS
# ========================================
# Maximum tokens to generate in response
LLM_MAX_TOKENS=800

# Temperature (0.0 - 1.0): Lower = more focused, Higher = more creative
LLM_TEMPERATURE=0.6

# For Ollama or custom LLM gateway
# Example: http://localhost:11434
LLM_BASE_URL=

# ========================================
# CHROMADB CONFIGURATION
# ========================================
# Vector database paths for embeddings
CHROMA_PRODUCT_PATH=./chroma_db_product
CHROMA_LEGAL_PATH=./chroma_db_legal

# ========================================
# SENTENCE TRANSFORMERS
# ========================================
# Embedding model for vector search
# Options:
# - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (Multilingual)
# - sentence-transformers/all-MiniLM-L6-v2 (English)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# ========================================
# AI SERVICE SETTINGS
# ========================================
AI_SERVICE_PORT=8000
AI_SERVICE_HOST=0.0.0.0

# Vector search settings
VECTOR_SEARCH_TOP_K=5
SIMILARITY_THRESHOLD=0.5

# Image search settings
IMAGE_SEARCH_TOP_K=10
IMAGE_SIMILARITY_THRESHOLD=0.6
