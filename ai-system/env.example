# AI System Environment Configuration
# Copy this file to .env and update the values

# Database Configuration (MySQL from Prisma)
DATABASE_URL=mysql://root:password@localhost:3306/ecommerce
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ecommerce

# API Configuration
AGENTS_API_HOST=0.0.0.0
AGENTS_API_PORT=5003
NLP_API_HOST=0.0.0.0
NLP_API_PORT=5004
WEB_API_HOST=0.0.0.0
WEB_API_PORT=5005

# AI Models Configuration
MODELS_DIR=./models
DATA_DIR=./data
TRAINING_DATA_DIR=./data/samples

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FILE_AGENTS=./logs/agents_api.log
LOG_FILE_NLP=./logs/nlp_api.log
LOG_FILE_WEB=./logs/web_api.log

# Report Generation
REPORT_OUTPUT_DIR=./web/generated
REPORT_TEMPLATE_DIR=./templates

# Development
DEBUG=false
ENVIRONMENT=development

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External APIs (if needed)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
