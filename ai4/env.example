# Application
APP_ENV=local
APP_BASE_URL=http://localhost:8000
ADMIN_API_KEY=

# MySQL Database
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=
DB_MYSQL_DATABASE=ecommerce_db

# LLM / Generative Model
# provider: openai | gemini | ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=
# Gemini (Google AI Studio)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
LLM_MAX_TOKENS=800
LLM_TEMPERATURE=0.6
# For Ollama or custom gateway (e.g., http://localhost:11434)
LLM_BASE_URL=

# Quy tắc auto-chọn provider:
# - Nếu OPENAI_API_KEY có giá trị => dùng OpenAI
# - Ngược lại, nếu GEMINI_API_KEY có giá trị => dùng Gemini
# - Ngược lại, nếu LLM_BASE_URL có giá trị => dùng Ollama
# - Nếu không có gì => fallback trả lời mặc định

# Vector DB / Embeddings (ChromaDB)
CHROMA_DIR=./.chroma
EMBEDDING_MODEL=intfloat/multilingual-e5-small

