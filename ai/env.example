# Web-ecommerce AI System Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=your_password_here
DB_MYSQL_DATABASE=ecommerce_db
DB_POOL_MIN=1
DB_POOL_MAX=10

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# LLM Provider: openai, gemini, ollama
LLM_PROVIDER=gemini

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# Gemini Configuration (if using Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Ollama Configuration (if using Ollama)
LLM_BASE_URL=http://localhost:11434

# LLM Parameters
LLM_MAX_TOKENS=800
LLM_TEMPERATURE=0.6

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=local
APP_BASE_URL=http://localhost:8000
ADMIN_API_KEY=your_admin_api_key_here

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
CHROMA_DIR=./.chroma
EMBEDDING_MODEL=intfloat/multilingual-e5-small

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_system.log

# DataDog Tracing (optional)
DD_TRACE_ENABLED=false
DD_SERVICE_NAME=web-ecommerce-ai
DD_ENV=local

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_BUSINESS_ANALYTICS=true
ENABLE_REPORT_GENERATION=true
ENABLE_VECTOR_SEARCH=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true
HOST=0.0.0.0
PORT=8000

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production
# DEBUG=false
# RELOAD=false
# WORKERS=4
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem