# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL Database connection details
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=ecommerce_db

# Prisma Database URL (auto-generated from above)
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:your_mysql_password@localhost:3306/ecommerce_db"

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=5000
NODE_ENV=development

# ========================================
# JWT AUTHENTICATION
# ========================================
# Secret key for JWT token encryption (use a strong random string)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# CLOUDINARY (Image Storage & CDN)
# ========================================
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ========================================
# EMAIL CONFIGURATION (SMTP)
# ========================================
# For Gmail: Enable "App Passwords" in Google Account settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# ========================================
# GOOGLE OAUTH 2.0
# ========================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# PAYMENT GATEWAYS
# ========================================

# VNPay Payment Gateway
# Get credentials from: https://sandbox.vnpayment.vn/merchantv2/
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# Tingee Payment Gateway
# Get credentials from: https://tingee.vn
TINGEE_BASE_URL=https://open-api.tingee.vn
TINGEE_CLIENT_ID=your_tingee_client_id
TINGEE_SECRET_TOKEN=your_tingee_secret_token
TINGEE_BANK_NAME=VietinBank
TINGEE_ACCOUNT_NUMBER=your_bank_account_number

# MoMo Payment (Optional)
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key

# ========================================
# GHN SHIPPING API
# ========================================
# Get credentials from: https://ghn.vn
GHN_TOKEN=your_ghn_api_token
GHN_SHOP_ID=your_ghn_shop_id
GHN_API_URL=https://online-gateway.ghn.vn
GHN_IS_PRODUCTION=false

# Warehouse Information (Shipping From Address)
GHN_FROM_DISTRICT_ID=1457
GHN_FROM_WARD_CODE=21708
GHN_FROM_NAME=Your Store Name
GHN_FROM_PHONE=0123456789
GHN_FROM_ADDRESS=Your Store Address
GHN_FROM_WARD=Ward Name
GHN_FROM_DISTRICT=District Name
GHN_FROM_PROVINCE=Province Name

# ========================================
# AI SERVICE
# ========================================
# URL of your AI service (Python FastAPI)
AI_V2_URL=http://localhost:8000

# ========================================
# OTP CONFIGURATION
# ========================================
# OTP settings for email verification
OTP_EXPIRES_IN=300000
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# Max file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ========================================
# PAGINATION CONFIGURATION
# ========================================
DEFAULT_PAGE=1
DEFAULT_LIMIT=10
MAX_LIMIT=100
