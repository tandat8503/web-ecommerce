FROM node:18-alpine

# Cài đặt dependencies cần thiết
RUN apk add --no-cache \
    mysql-client \
    openssl

WORKDIR /app

# Copy package files
COPY package*.json ./

# Cài đặt dependencies (bao gồm dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Chạy development server với hot reload
CMD ["npm", "run", "dev"]
